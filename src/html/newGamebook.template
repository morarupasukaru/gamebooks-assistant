<div id="screen-newGamebook" class="container hidden">
	<div class="pure-g">
		<div class="pure-u-1">
            <h1 id="screen-newGamebook-h1" class="i18n" data-fr="Nouveau livre-jeu" data-en="New gamebook"></h1>
		</div>

		<div class="pure-u-1">
			<label for="screen-newGamebook-title" class="i18n" data-fr="Titre*" data-en="Title*"></label>
			<input id="screen-newGamebook-title" class="i18n u-full-width" type="text" required>
		</div>

		<div class="pure-u-1">
			<label for="screen-newGamebook-serie" class="i18n" data-fr="Serie" data-en="Serie"></label>
